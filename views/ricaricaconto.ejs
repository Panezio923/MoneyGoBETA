<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyGo</title>
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel='shortcut icon' type='image/x-icon' href='images/favicon.ico' />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/schermata.css">

    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Didact Gothic' rel='stylesheet'>
</head>
<body  class="d-flex flex-column">

<% include partials/header_postlogin.ejs %>

<div id="page-content">
    <main class="container">
        <div class="row">
            <div class="col-12  col-md-6 offset-md-3">
                <div class="alert alert-danger text-center" id="alert" role="alert">
                    <p id="alert_text"></p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 mb-2">
                <div class="card shadow">
                    <h1 class="text-center card-header">Ricarica il tuo conto MoneyGO </h1>
                    <div class="card-body">
                        <div class = "row">
                            <div class ="col-12 col-md-6">
                                <label for="metodoPagamento">Seleziona la fonte della ricarica</label>
                                <select class="form-control" id="ListaCarte">
                                        <%
                                        var numeroBanche = metodi.map(function(value) {return value.numero_iban;});
                                        var numeroCarte = metodi.map(function(value) {return value.numero_carta;});
                                        var numero = numeroCarte.concat(numeroBanche);
                                        //Filtro i numeri per rimuovere i valori null
                                        var filter = numero.filter(function (value) { return value; });
                                        for(let i = 0; i < metodi.length; i++){
                                        %>
                                    <option value="value<%=i%>"><%=filter[i]%></option>
                                    <%}%>
                                </select>
                            </div>

                            <div class ="col-12 col-md-6">
                                <campi>Importo della carta selezionata:</campi>
                                <p id="importocorrente"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-7">
                                <label for="importo">Inserisci l'importo che vuoi ricaricare</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="euro">â‚¬</span>
                                    </div>
                                    <input type="text" min="1" max="50000" class="form-control text-right importo" placeholder="Importo"  aria-describedby="euro" id="importoUNO" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 46">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3"></div>

                        <div class="row">
                            <div class="col-12 col-md-12">
                                <button type="button" class="btn btn-primary btn-block" id="RicaricaConto">Ricarica Conto</button>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </main>
</div>
<% include partials/footer.ejs %>
<%include partials/script.ejs%>
<script type="text/javascript" src="/javascripts/home.js"></script>
<script type="text/javascript" src="/javascripts/RicaricaConto.js"></script>
</body>
</html>