<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyGo</title>
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel='shortcut icon' type='image/x-icon' href='/images/favicon.ico' />

    <!-- Import di Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Didact Gothic' rel='stylesheet'>

<body  class="d-flex flex-column">

<% include partials/header.ejs%>

<div id="page-content">
<main class="container">
        <!--Container Slider-->

        <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="10000">
                    <img src="/images/slides1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="2000">
                    <img src="/images/slides2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/slides3.jpg" class="d-block w-100" alt="...">
                </div>

                <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


        <!--Container corpo centrale-->

        <!--Card Welcome Login-->
        <div class="mb-4"></div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-6">
                <div class="card border-light mb-3 " style="max-width: 35rem;">
                    <div class="card-header" id="#test">Welcome to MoneyGo</div>
                    <div class="card-body">
                        <!--Barra di loading-->
                        <div class="spinner-border text-primary mx-auto" id="loading" role="status"></div>
                        <span class="sr-only">Loading...</span>
                        <div id="body_card">
                            <h5 class="card-title">Effettua il Login</h5>
                            <div class="alert alert-danger" id="alert" role="alert">
                                <p class="align-content-center mx-auto" id="alert_text"></p>
                            </div>
                            <p class="card-text">
                            <form action="/login" method="post" id="form_login">
                                <label for="user">Username</label>
                                <input class="form-control form-control-lg" type="text" name="user" id="user">
                                <div class="mb-3"></div>
                                <label for="password">Password</label>
                                <input class="form-control form-control-lg" type="password" name="password" id="password">
                                <div class="mb-4"></div>
                            </form>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-lg btn-block" id="registrati">Registrati</button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-lg btn-block"  id="buttonLogin">Login</button>
                                    </div>
                                </div>


                        </div>
                    </div>
                </div>
            </div>

            <!--Card password dimenticata-->
            <div class="col-12 col-md-6 col-lg-5 offset-lg-1">
                <div class="card">
                    <img src="/images/passdimenticata.jpg" class="card-img-top" alt="password Dimenticata">
                    <div class="card-body">
                        <div class="mb-3"> </div>
                        <button class="btn btn-primary btn-lg btn-block" id="recPass">Recupero Password</button>
                    </div>
                </div>
            </div>
        </div>
    <div class="mb-5"></div>
</main>
</div>

<% include partials/footer.ejs%>
<% include partials/script.ejs%>
<script type="text/javascript" src="/javascripts/login.js" ></script>

</body>
</html>
