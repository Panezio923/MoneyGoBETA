<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MoneyGo</title>
    <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
    <link rel='shortcut icon' type='image/x-icon' href='./images/icona.ico' />

    <!-- Import di Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Font -->
    <link href='https://fonts.googleapis.com/css?family=Didact Gothic' rel='stylesheet'>

<body  class="d-flex flex-column">

<% include partials/header.ejs%>

<div id="page-content">
<main class="container">
        <div class="row mb-2 mb-md-5">
            <h1 class="col-12 text-center" style="background-color: #e9e9e9; border-radius: 4px">Benvenuto su MoneyGO</h1>
        </div>
        <!--Card Welcome Login-->
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="card shadow mb-3">
                    <h1 class="card-header text-center">Effettua il login</h1>
                    <div class="card-body">
                        <!--Barra di loading-->
                        <div class="d-flex justify-content-center" >
                            <div class="spinner-border text-primary loading m-5" style="width: 3rem; height: 3rem;"  id="loading" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                        <div id="body_card">
                            <div class="alert alert-danger" id="alert" role="alert">
                                <p class="align-content-center mx-auto" id="alert_text"></p>
                            </div>
                            <p class="card-text">
                            <form action="/login" method="post" id="form_login">
                                <label for="user">Username</label>
                                <input class="form-control mb-2" type="text" name="user" id="user">
                                <label for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password">
                            </form>
                                <div class="row mb-1 mt-1">
                                    <div class="col-6">
                                        <button class="btn btn-primary  btn-block" id="registrati">Registrati</button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary btn-block"  id="buttonLogin">Login</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Card password dimenticata-->
            <div class="col-12 col-md-6">
                <div class="card">
                    <h1 class="card-header text-center">Password dimenticata?</h1>
                    <div class="card-body">
                        <div class="mb-3"> </div>
                        <button class="btn btn-primary btn-block" id="recPass">Recupero Password</button>
                    </div>
                </div>
                <div class="card mt-2 mb-2">
                    <h1 class="card-header text-center">Su di noi</h1>
                    <div class="card-body">
                        <div class="mb-3"> </div>
                        <button class="btn btn-primary btn-block">Scopri chi siamo</button>
                    </div>
                </div>
            </div>

        </div>
</main>
</div>

<% include partials/footer.ejs%>
<% include partials/script.ejs%>
<script type="text/javascript" src="/javascripts/login.js" ></script>

</body>
</html>
