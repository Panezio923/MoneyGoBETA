<body class="d-flex flex-column">

<% include ../header_postlogin.ejs %>

<div id="page-content">
    <main class="container">
        <div class="row justify-content-center mb-3">
            <h2>Crea un link per ricevere un pagamento</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="shadow-none p-3 mb-5 bg-light rounded">http://moneygo:443/CIAONE</div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6">
                <label for="importo">Inserisci l'importo</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="euro">â‚¬</span>
                    </div>
                    <input type="text" min="1" max="50000" class="form-control text-right importo" placeholder="Importo"  aria-describedby="euro" id="importoDUE" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 46">
                </div>
            </div>
        </div>
        <div class="mb-2"></div>
        <div class="form-group">
            <label for="causale">Causale:</label>
            <textarea class="form-control causale" rows="2" id="causaleRichiesta"></textarea>
        </div>
        <div class="mb-2"></div>

    </main>
</div>
