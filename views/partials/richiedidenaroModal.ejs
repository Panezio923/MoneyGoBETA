<!--Modal form richiesta denaro-->
<form method="post" id="form_richiediDenaro">
    <div class="modal fade" id="modalRichiediDenaro" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Compila il form per inviare il denaro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div id="formModalDUE">
                        <div class="row">
                            <div class="col-12">
                                <label for="reqmittente">Nickname a cui inviare la richiesta</label>
                                <input type="text" maxlength="8" class="form-control" id="reqmittente" placeholder="Nickname" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="mb-3"></div>

                        <div class="row">
                            <div class="col-8">
                                <label for="importo">Inserisci l'importo</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="euro">â‚¬</span>
                                    </div>
                                    <input type="text" min="1" max="50000" class="form-control text-right importo" placeholder="Importo"  aria-describedby="euro" id="importoDUE" onkeypress="return event.charCode >= 48 && event.charCode <= 57 || event.charCode == 46">
                                </div>
                            </div>
                        </div>
                        <div class="mb-2"></div>
                        <div class="form-group">
                            <label for="causale">Causale:</label>
                            <textarea class="form-control causale" rows="2" id="causaleRichiesta"></textarea>
                        </div>
                        <div class="mb-2"></div>

                    </div>

                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="alert alert-danger text-center" role="alert">
                                <div class="testo_alert">
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Spinner loading-->
                <div class="row justify-content-center loading">
                    <div class="col-12">
                        <div class="spinner-border text-primary" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center alert-check">
                    <div class="success-checkmark">
                        <div class="check-icon">
                            <span class="icon-line line-tip"></span>
                            <span class="icon-line line-long"></span>
                            <div class="icon-circle"></div>
                            <div class="icon-fix"></div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <h5>Invio riuscito.</h5>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="confermaRichiestaDenaro">Invia</button>
                    <button type="button" class="btn btn-primary aggiorna" id="aggiorna">Aggiorna</button>
                </div>
            </div>
        </div>
    </div>
</form>